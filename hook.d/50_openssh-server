glob1='/etc/ssh/ssh_host_*'
glob2=$glob1

case "$1" in
    startup)
	if [ "$glob1" = "$glob2" ]; then
	    dpkg-reconfigure openssh-server
	fi
	;;
    cleanup)
	if [ "$glob1" != "$glob2" ]; then
	    echo "Removing openssh-server's host keys..."
	    rm -vf /etc/ssh/ssh_host_*
	fi
	;;
esac
